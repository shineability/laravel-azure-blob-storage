{
    "name": "shineability/laravel-azure-blob-storage",
    "description": "Azure Blob Storage filesystem driver for Laravel",
    "keywords": [
        "azure",
        "blob",
        "storage",
        "filesystem",
        "laravel",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Maarten Troonbeeckx",
            "email": "maarten@troonbeeckx.net"
        }
    ],
    "require": {
        "php": "^8.2",
        "webmozart/assert": "^1.11 || ^2.0",
        "illuminate/filesystem": "^11|^12",
        "illuminate/support": "^11|^12",
        "azure-oss/storage-blob-flysystem": "^1.4"
    },
    "require-dev": {
        "graham-campbell/testbench": "^6.0",
        "laravel/pint": "^1.13",
        "larastan/larastan": "^3.2",
        "orchestra/testbench": "^9.0|^10.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpro/grumphp": "^2.15",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "yieldstudio/grumphp-laravel-pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Shineability\\LaravelAzureBlobStorage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shineability\\LaravelAzureBlobStorage\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/pint --test -v",
        "lint:fix": "vendor/bin/pint -v",
        "test:unit": "vendor/bin/testbench package:test --testsuite Unit",
        "test:feature": "vendor/bin/testbench package:test --testsuite Feature",
        "test:types": "vendor/bin/phpstan analyze --memory-limit=-1",
        "test:coverage": "php -d pcov.enabled=1 vendor/bin/testbench package:test --coverage",
        "test": [
            "@test:unit",
            "@test:feature",
            "@test:types",
            "@lint"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
